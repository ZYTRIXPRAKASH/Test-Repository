<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/sales_payment_line_item_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sales_payment_date_line_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:text="1/28/13"
            android:textColor="#474747"/>

        <TextView
            android:id="@+id/sales_payment_type_line_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/sales_payment_date_line_item_tv"
            android:text="Cash"
            android:textColor="#474747"/>

        <TextView
            android:id="@+id/sales_payment_amount_line_item_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:text="$22.14"
            android:gravity="center"
            android:background="@drawable/amount_green_bg"
            android:textColor="#ffffff" />
        
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sales_payment_line_item_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sales_payment_line_item_payment_memo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"
            android:text="This is memo for the Payment"
            android:textStyle="bold"
            android:textColor="#000000" />
    </RelativeLayout>

    <View
        android:id="@+id/sales_payment_line_item_view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ababab" />

</LinearLayout>