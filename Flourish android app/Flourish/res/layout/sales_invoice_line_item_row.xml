<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/sales_payment_line_item_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/sales_invoice_line_item_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:text="Face Cream"
            android:textColor="#000000"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/sales_invoice_line_item_type_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:text="Sale"
            android:textColor="#c89600" 
            android:background="#fff899"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sales_invoice_line_item_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/sales_invoice_line_item_invoice_number_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:text="#75"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/sales_invoice_line_item_type_tax_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$4.50"
            android:layout_toRightOf="@id/sales_invoice_line_item_invoice_number_tv"
            android:layout_marginLeft="30dp"
            android:textColor="#000000" 
            android:textStyle="bold"/>
        
        <TextView
            android:id="@+id/sales_invoice_line_item_type_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/sales_invoice_line_item_type_tax_tv"
            android:layout_margin="5dp"
            android:text="* 2"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/sales_invoice_line_item_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/sales_invoice_line_item_type_quantity"
            android:text="- $5.00"
            android:layout_margin="5dp"
            android:textColor="#000000"
            android:visibility="gone"/> 

        <TextView
            android:id="@+id/sales_invoice_line_item_total_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:text="$18.00"
            android:textStyle="bold"
            android:textColor="#000000"/>
    </RelativeLayout>

    <View
        android:id="@+id/sales_invoice_line_item_view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#ababab" />

</LinearLayout>