<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/sales_main_rl"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background" >
   
    <com.pcr.android.widget.PullActivateLayout
        android:id="@+id/pull_container"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#f5f5f5"
       
        android:scrollbars="vertical"
   
         >

        <include
            android:id="@id/action_view"
            layout="@layout/refresh_layout" />

        <include
            android:id="@id/tool_view"
            layout="@layout/tool_layout" />

        <ListView
            android:id="@+id/sales_listview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:fastScrollEnabled="true" >
        </ListView>
     </com.pcr.android.widget.PullActivateLayout>

</RelativeLayout>